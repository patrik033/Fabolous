@page
@model FabolousUI.Pages.Settings.IndexModel




<div class="row">

    <div class="col-6">
       
        <form method="post">
           


    <div class="row pb-2">
        <h2 class="text-primary pl-3">Settings Page</h2>
        <hr />
    </div>
            
            <div class="border p-3 mt-4 ms-4 col-6">
                <label asp-for="@Model.Field" class="form-label">Fält</label>
                <input asp-for="@Model.Field" class="form-control" value="" />

                <label asp-for="@Model.Property"class="form-label">Egenskap</label>
                <input asp-for="@Model.Property" class="form-control" value="" />

              <label asp-for="@Model.Value"class="form-label">Värde</label>
                <input asp-for="@Model.Value" class="form-control" />               

            </div>
           
                
            
            <div class="ms-4 pt-4">
                <button type="submit" class="btn btn-primary" >Change</Button>
                <a asp-Page="../Index" class="btn btn-danger ms-2">Cancel</a>
            </div>
        </form>
    </div>

    <div class="col-6 mt-5">
        <div class="row">
            <div class="col-6">
                

                <label for="textArea" class="form-label">Config File:</label>
                <textarea readonly name="kvitto" rows=18 cols=25 class="pe-3">
                @Model.configText

        </textarea>
            </div>
        </div>

    </div>
    
</div>