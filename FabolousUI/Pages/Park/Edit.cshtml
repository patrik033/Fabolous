@page
@model FabolousUI.Pages.Park.EditModel






<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-page="create" class="btn btn-primary ">
                <i class="bi bi-plus-square"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Registration number
                </th>
                <th>
                    Size
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            
                <tr>
                    <td width="30%">@Model.myCar.Registration </td>
                    <td width="30%">@Model.myCar.Size</td>
                    <td>
                        <a asp-page="EditVehicle" asp-route-id="@Model.myCar.Id" class="btn btn-primary mx-2">
                            Edit
                            <i class="bi-pencil-square"></i>
                        </a>
                        <a asp-page="Delete" asp-route-id="@Model.myCar.Id" class="btn btn-danger mx-2">
                            Delete
                            <i class="bi-trash-fill"></i>
                        </a>

                    </td>


                </tr>
            
        </tbody>
    </table>
</div>
