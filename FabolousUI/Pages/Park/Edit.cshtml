@page
@using BussinessLogicLibrary

@using Newtonsoft.Json

@model FabolousUI.Pages.Park.EditModel


<div class="container p-3">
    <input hidden="hidden" asp-for="@Model.myNum" />
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Parked Vehicles</h2>
        </div>

        <div class="col-6">
            @foreach (var line in Model.myNum)
            {

                if (line.CurrentSize == 0)
                {
                    <a asp-page="CreateCar" asp-route-id="@line.Id" class="btn btn-outline-info ">
                        <i class="bi bi-emoji-heart-eyes"> &nbsp; Create New Car</i>
                    </a>
                    <a asp-page="CreateMotorcykle" asp-route-id="@line.Id" class="btn btn-outline-info ms-3">
                        <i class="bi bi-emoji-smile"></i> &nbsp; Create New Motorcycle
                    </a>
                }
                if (line.CurrentSize == 2)
                {
                    <a asp-page="CreateMotorcykle" asp-route-id="@line.Id" class="btn btn-outline-info ms-3">
                        <i class="bi bi-emoji-smile"></i> &nbsp; Create New Motorcycle
                    </a>
                }
            }
        </div>

    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Registration number
                </th>
                <th>
                    Date
                </th>
                <th>ParkingSpot</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

                @foreach (var line in Model.myNum)
                {
                    @foreach (var line2 in line.Parked_Vehicles)
                    {
                        <tr>
                            <td width="15%">@line2.Registration </td>
                            <td width="15%">@line2.StartTime</td>
                            <td width="5%">@line2.Parkingspot</td>
                            <td>
                                @if (line2.GetType() == typeof(Car))
                                {
                                    <a asp-page="../EditTypes/EditCar" asp-route-id="@line2.Id" class="btn btn-primary mx-2">
                                        Edit
                                        <i class="bi-pencil-square"></i>
                                    </a>
                                    <a asp-page="../Checkout/CheckoutCar" asp-route-id="@line2.Id" class="btn btn-danger mx-2">
                                        Delete
                                        <i class="bi-trash-fill"></i>
                                    </a>
                                     Dictionary<string, string> dv = new Dictionary<string, string>{{"passedObject", JsonConvert.SerializeObject(line2)}}; 
                                    <a asp-page="Rerout_Index" asp-all-route-data="dv" class="btn btn-secondary mx-2">
                                        Move
                                        <i class="bi bi-minecart-loaded"></i>
                                    </a>
                                }
                                @if (line2.GetType() == typeof(Motorcycle))
                                {
                                    <a asp-page="../EditTypes/EditMotorcykle" asp-route-id="@line2.Id" class="btn btn-primary mx-2">
                                        Edit
                                        <i class="bi-pencil-square"></i>
                                    </a>
                                    <a asp-page="../Checkout/CheckoutMotorcykle" asp-route-id="@line2.Id" class="btn btn-danger mx-2"> 
                                        Delete
                                        <i class="bi-trash-fill"></i>
                                    </a>
                                    
                                        Dictionary<string, string> dv = new Dictionary<string, string>{{"passedObject", JsonConvert.SerializeObject(line2)}};
                                       
                                    <a asp-page="Rerout_Index" asp-all-route-data ="dv" class="btn btn-secondary mx-2">
                                        Move
                                        <i class="bi bi-minecart-loaded"></i>
                                    </a>
                                }
                            </td>
                        
                            </tr>
                    }

                }
            

        </tbody>
    </table>
</div>
